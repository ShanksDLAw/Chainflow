# zkVerify Testnet Configuration
# ChainFlow Integration Settings

# zkVerify Testnet RPC Endpoints
ZKVERIFY_TESTNET_RPC=wss://testnet-rpc.zkverify.io
ZKVERIFY_HTTP_RPC=https://testnet-rpc.zkverify.io

# zkVerify Chain Configuration
ZKVERIFY_CHAIN_ID=1
ZKVERIFY_NETWORK=testnet

# Circuit Configuration
CIRCUIT_ID=1001
PROOF_VERSION=1

# API Configuration
ZKVERIFY_API_TIMEOUT=30000
ZKVERIFY_RETRY_ATTEMPTS=3

# Proof Submission Settings
PROOF_SUBMISSION_GAS_LIMIT=1000000
PROOF_VERIFICATION_TIMEOUT=60000

# Development Settings
ZKVERIFY_DEBUG=true
FALLBACK_TO_LOCAL=true

# Testnet Faucet (for development)
ZKVERIFY_FAUCET_URL=https://faucet.zkverify.io

# Circuit Paths
NOIR_CIRCUIT_PATH=./src/main.nr
CIRCUIT_BUILD_PATH=./target

# Verification Settings
MIN_TRUST_SCORE=70
SUPPLIER_TIER_PREMIUM=1
SUPPLIER_TIER_STANDARD=2
SUPPLIER_TIER_BASIC=3